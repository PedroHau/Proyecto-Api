<%- include ('./partials/_header') %>
<nav class="navbar navbar-dark bg-dark mb-4">
    <a href="/" class="navbar-brand">Informacion</a>
</nav>

    <div class="container p-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <form action="" method="POST">
                            <div class="form-group">
                                <p class="text-capitalize" autofocus >Nombre</p>
                                <input type="text" name="name" class="form-control" placeholder="Name" value="<%= tasks.nombre %>">
                            </div>

                            <div class="form-group">
                                <p class="text-capitalize" autofocus >Correo</p>
                                <input type="text" name="email" placeholder="Email" class="form-control" value="<%= tasks.email %>">
                            </div>

                            <div class="form-group">
                                <p class="text-capitalize" autofocus >Numero telefonico</p>
                                <input type="text" name="phone" placeholder="Phone" class="form-control" value="<%= tasks.phone %>">
                            </div>

                            <div class="card-body">
                                <a href="" class="btn btn-danger btn-block">
                                  Email
                                </a>
                                
                                <a href="" class="btn btn-success btn-block">
                                    WhatsApp
                                </a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
